{
  "compilerOptions": {
    "rootDir": ".",

    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2023"],

    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "newLine": "lf",
    "noErrorTruncation": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
